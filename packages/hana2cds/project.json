{
  "name": "hana2cds",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/hana2cds/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/hana2cds",
        "main": "packages/hana2cds/src/index.ts",
        "tsConfig": "packages/hana2cds/tsconfig.lib.json",
        "assets": [
          "packages/hana2cds/*.md",
          "packages/hana2cds/**/*.csn"
        ]
      },
      "dependsOn": [
        "^build",
        "build-types"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/hana2cds/jest.config.ts"
      }
    },
    "build-csn": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/index.cds"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/hana2cds",
        "command": "npx cds compile index.cds --dest index.csn",
        "cwd": "dist/packages/hana2cds"
      },
      "dependsOn": [
        "build"
      ]
    },
    "prepublish": {
      "executor": "nx:noop",
      "dependsOn": [
        "build-csn"
      ]
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm version",
        "cwd": "packages/hana2cds"
      }
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm pkg set bin.hana2cds=src/bin/run.js",
          "npx set-shebang src/bin/run.js node"
        ],
        "cwd": "dist/packages/hana2cds"
      },
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "{options.cwd}"
      ]
    }
  }
}
