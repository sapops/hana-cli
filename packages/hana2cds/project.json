{
  "name": "hana2cds",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/hana2cds/src",
  "projectType": "library",
  "nx-release-publish": {},
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/hana2cds",
        "main": "packages/hana2cds/src/index.ts",
        "tsConfig": "packages/hana2cds/tsconfig.lib.json",
        "assets": ["packages/hana2cds/*.md", "packages/hana2cds/**/*.csn"]
      },
      "dependsOn": ["^build", "build-types", "build-csn"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "build-csn": {
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/**/*.cds"],
      "outputs": ["{projectRoot}/index.csn"],
      "options": {
        "command": "npx cds compile index.cds --dest index.csn",
        "cwd": "{projectRoot}"
      }
    },
    "prepublish": {
      "executor": "nx:noop",
      "dependsOn": ["build-csn"]
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm version",
        "cwd": "packages/hana2cds"
      }
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm pkg set bin.hana2cds=src/bin/run.js",
          "npx set-shebang src/bin/run.js node",
          "npm pkg delete scripts"
        ],
        "cwd": "dist/packages/hana2cds"
      },
      "dependsOn": ["build"],
      "outputs": ["{options.cwd}"]
    }
  }
}
